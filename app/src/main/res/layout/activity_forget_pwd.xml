<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huoyun.huoyun.page.ForgetPwdActivity">

    <RelativeLayout
        android:background="#f2f2f2"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="60dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@mipmap/pre"
                android:layout_centerInParent="true"
                android:layout_width="30dp"
                android:layout_height="20dp" />

        </RelativeLayout>

        <TextView
            android:layout_centerInParent="true"
            android:textColor="#101010"
            android:textSize="18sp"
            android:text="找回密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    
    <ImageView
        android:scaleType="centerCrop"
        android:src="@mipmap/logo"
        android:layout_width="match_parent"
        android:layout_height="150dp" />


    <RelativeLayout
        android:layout_marginTop="47dp"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <ImageView
            android:src="@mipmap/icon6"
            android:id="@+id/tv_phone_num"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_width="18dp"
            android:layout_height="28dp" />

        <EditText
            android:id="@+id/et_phone_num"
            android:inputType="number"
            android:textSize="17dp"
            android:layout_marginLeft="20dp"
            android:hint="请输入电话号"
            android:layout_toRightOf="@+id/tv_phone_num"
            android:layout_toLeftOf="@+id/btn_yzm"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:layout_centerVertical="true"
            android:background="@drawable/bg_yzm"
            android:textSize="14sp"
            android:textColor="#1FAE98"
            android:text="获取验证码"
            android:id="@+id/btn_yzm"
            android:layout_alignParentRight="true"
            android:layout_width="120dp"
            android:layout_height="30dp" />

    </RelativeLayout>

    <View
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <ImageView
            android:src="@mipmap/icon9"
            android:id="@+id/tv_yzm"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_width="18dp"
            android:layout_height="28dp" />

        <EditText
            android:id="@+id/et_yzm"
            android:inputType="number"
            android:textSize="17dp"
            android:layout_marginLeft="20dp"
            android:hint="请输入验证码"
            android:layout_toRightOf="@+id/tv_yzm"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <View
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <Button
        android:background="@drawable/bg_login"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/btn_next"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:text="下一步"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

</LinearLayout>
