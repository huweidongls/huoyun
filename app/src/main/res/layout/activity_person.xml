<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huoyun.huoyun.page.PersonActivity">

    <RelativeLayout
        android:background="#f2f2f2"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="60dp"
            android:layout_height="match_parent">

            <TextView
                android:textColor="#101010"
                android:textSize="14sp"
                android:text="返回"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:layout_centerInParent="true"
            android:textColor="#101010"
            android:textSize="18sp"
            android:text="个人信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_marginTop="47dp"
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:textSize="17dp"
            android:text="姓名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_name"
            android:textSize="17dp"
            android:layout_marginLeft="20dp"
            android:hint="请输入姓名"
            android:layout_toRightOf="@+id/tv_name"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <View
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <View
        android:layout_marginTop="21dp"
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <TextView
            android:id="@+id/tv_phone_num"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:textSize="17dp"
            android:text="电话号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:inputType="number"
            android:id="@+id/et_phone_num"
            android:textSize="17dp"
            android:layout_marginLeft="20dp"
            android:hint="请输入电话号"
            android:layout_toRightOf="@+id/tv_phone_num"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <View
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <View
        android:layout_marginTop="21dp"
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <TextView
            android:id="@+id/tv_zzl"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:textSize="17dp"
            android:text="载重"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_toLeftOf="@+id/tv"
            android:id="@+id/et_zzl"
            android:textSize="17dp"
            android:layout_marginLeft="20dp"
            android:hint="请输入载重"
            android:layout_toRightOf="@+id/tv_zzl"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:textSize="17dp"
            android:text="吨"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <View
        android:layout_marginTop="21dp"
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <TextView
            android:id="@+id/tv_canshu"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:textSize="17dp"
            android:text="参数"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_canshu"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_chang"
                    android:layout_centerVertical="true"
                    android:textSize="17sp"
                    android:textColor="#101010"
                    android:text="长"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:layout_marginLeft="10dp"
                    android:layout_toLeftOf="@+id/tv_cm1"
                    android:layout_toRightOf="@+id/tv_chang"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_marginRight="10dp"
                    android:id="@+id/tv_cm1"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="17sp"
                    android:textColor="#101010"
                    android:text="cm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_kuan"
                    android:layout_centerVertical="true"
                    android:textSize="17sp"
                    android:textColor="#101010"
                    android:text="宽"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:layout_marginLeft="10dp"
                    android:layout_toLeftOf="@+id/tv_cm2"
                    android:layout_toRightOf="@+id/tv_kuan"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_marginRight="10dp"
                    android:id="@+id/tv_cm2"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="17sp"
                    android:textColor="#101010"
                    android:text="cm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_gao"
                    android:layout_centerVertical="true"
                    android:textSize="17sp"
                    android:textColor="#101010"
                    android:text="高"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:layout_marginLeft="10dp"
                    android:layout_toLeftOf="@+id/tv_cm3"
                    android:layout_toRightOf="@+id/tv_gao"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_marginRight="10dp"
                    android:id="@+id/tv_cm3"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="17sp"
                    android:textColor="#101010"
                    android:text="cm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_width="104dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl_upload_car"
                    android:background="@drawable/bg_addimg"
                    android:layout_width="104dp"
                    android:layout_height="104dp">

                    <ImageView
                        android:id="@+id/iv_add1"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/add_image"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/iv_add1"
                        android:layout_centerHorizontal="true"
                        android:textColor="#101010"
                        android:textSize="12sp"
                        android:text="上传车辆照片"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/iv_car"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </RelativeLayout>

                <TextView
                    android:layout_marginTop="9dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="#101010"
                    android:text="只支持.jpg格式"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_width="104dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl_upload_xsz"
                    android:background="@drawable/bg_addimg"
                    android:layout_width="104dp"
                    android:layout_height="104dp">

                    <ImageView
                        android:id="@+id/iv_add2"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/add_image"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/iv_add2"
                        android:layout_centerHorizontal="true"
                        android:textColor="#101010"
                        android:textSize="12sp"
                        android:text="上传行驶证"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/iv_xsz"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </RelativeLayout>

                <TextView
                    android:layout_marginTop="9dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="#101010"
                    android:text="只支持.jpg格式"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:text="确认"
        android:layout_marginTop="26dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
