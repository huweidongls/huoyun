<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huoyun.huoyun.page.ModifyPwdActivity">

    <RelativeLayout
        android:background="#f2f2f2"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="60dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@mipmap/pre"
                android:layout_centerInParent="true"
                android:layout_width="30dp"
                android:layout_height="20dp" />

        </RelativeLayout>

        <TextView
            android:layout_centerInParent="true"
            android:textColor="#101010"
            android:textSize="18sp"
            android:text="修改密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    
    <ImageView
        android:scaleType="centerCrop"
        android:src="@mipmap/logo"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <RelativeLayout
        android:layout_marginTop="47dp"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <ImageView
            android:src="@mipmap/icon4"
            android:id="@+id/tv_old_pwd"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_width="18dp"
            android:layout_height="28dp" />

        <EditText
            android:inputType="textPassword"
            android:id="@+id/et_old_pwd"
            android:textSize="17dp"
            android:layout_marginLeft="20dp"
            android:hint="请输入旧密码"
            android:layout_toRightOf="@+id/tv_old_pwd"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <View
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <ImageView
            android:src="@mipmap/icon4"
            android:id="@+id/tv_new_pwd"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_width="18dp"
            android:layout_height="28dp" />

        <EditText
            android:inputType="textPassword"
            android:id="@+id/et_new_pwd"
            android:textSize="17dp"
            android:layout_marginLeft="20dp"
            android:hint="请输入新密码"
            android:layout_toRightOf="@+id/tv_new_pwd"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <View
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <ImageView
            android:src="@mipmap/icon4"
            android:id="@+id/tv_yzm"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_width="18dp"
            android:layout_height="28dp" />

        <EditText
            android:inputType="textPassword"
            android:id="@+id/et_new_pwd_sure"
            android:textSize="17dp"
            android:layout_marginLeft="20dp"
            android:hint="请输确认密码"
            android:layout_toRightOf="@+id/tv_yzm"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <View
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <Button
        android:background="@drawable/bg_login"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/btn_sure"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:text="确认"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

</LinearLayout>
