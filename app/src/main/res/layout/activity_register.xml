<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huoyun.huoyun.page.RegisterActivity">

    <RelativeLayout
        android:background="#f2f2f2"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="60dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@mipmap/pre"
                android:layout_centerInParent="true"
                android:layout_width="30dp"
                android:layout_height="20dp" />

        </RelativeLayout>

        <TextView
            android:layout_centerInParent="true"
            android:textColor="#101010"
            android:textSize="18sp"
            android:text="注册"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    
    <ImageView
        android:scaleType="centerCrop"
        android:src="@mipmap/logo"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <RelativeLayout
        android:layout_marginTop="47dp"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <ImageView
            android:src="@mipmap/icon5"
            android:id="@+id/tv_name"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_width="18dp"
            android:layout_height="28dp" />

        <EditText
            android:id="@+id/et_name"
            android:textSize="17dp"
            android:layout_marginLeft="20dp"
            android:hint="请输入姓名"
            android:layout_toRightOf="@+id/tv_name"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <View
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <ImageView
            android:src="@mipmap/icon6"
            android:id="@+id/tv_phone_num"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_width="18dp"
            android:layout_height="28dp" />

        <EditText
            android:inputType="number"
            android:id="@+id/et_phone_num"
            android:textSize="17dp"
            android:layout_marginLeft="20dp"
            android:hint="请输入电话号"
            android:layout_toRightOf="@+id/tv_phone_num"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <View
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <ImageView
            android:src="@mipmap/icon4"
            android:id="@+id/tv_pwd"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_width="18dp"
            android:layout_height="28dp" />

        <EditText
            android:inputType="textVisiblePassword"
            android:id="@+id/et_pwd"
            android:textSize="17dp"
            android:layout_marginLeft="20dp"
            android:hint="请输入密码"
            android:layout_toRightOf="@+id/tv_pwd"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <View
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <ImageView
            android:src="@mipmap/icon7"
            android:id="@+id/tv_car_num"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_width="18dp"
            android:layout_height="28dp" />

        <EditText
            android:id="@+id/et_car_num"
            android:textSize="17dp"
            android:layout_marginLeft="20dp"
            android:hint="请输入车牌号"
            android:layout_toRightOf="@+id/tv_car_num"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <View
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <ImageView
            android:src="@mipmap/icon8"
            android:id="@+id/tv_zzl"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_width="18dp"
            android:layout_height="28dp" />

        <EditText
            android:layout_toLeftOf="@+id/tv"
            android:id="@+id/et_zzl"
            android:textSize="17dp"
            android:layout_marginLeft="20dp"
            android:hint="请输入额定载重量"
            android:layout_toRightOf="@+id/tv_zzl"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:textSize="17dp"
            android:text="吨"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/tv_register"
        android:background="@drawable/bg_login"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="注册"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

</LinearLayout>
